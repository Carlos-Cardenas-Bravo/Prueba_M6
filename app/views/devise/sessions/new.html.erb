<h2 class="title">Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "box" }) do |f| %>
  <!-- Campo para el email -->
  <div class="field">
    <label class="label"><%= f.label :email %></label>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <!-- Campo para la contraseña -->
  <div class="field">
    <label class="label"><%= f.label :password %></label>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>
  </div>

  <!-- Campo para recordar sesión -->
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end %>

  <!-- Botón para iniciar sesión -->
  <div class="field">
    <div class="control">
      <%= f.submit "Iniciar sesión", class: "button is-primary is-fullwidth" %>
    </div>
  </div>
<% end %>

<%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name) %>
